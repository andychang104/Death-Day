<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/givertab1</item>
        <item name="colorPrimaryDark">@color/app_bar</item>
        <item name="colorAccent">@color/pubic_notification_btn</item>
        <item name="windowActionBar">false</item> <!-- 加这行 -->
        <item name="windowNoTitle">true</item> <!-- 再加这行 -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
